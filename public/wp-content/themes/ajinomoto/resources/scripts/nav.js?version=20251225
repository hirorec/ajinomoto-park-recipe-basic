/**
 * nav.js
 * ナビゲーション系
 */
$(function() {
    $(document).on('click', '#menuOpen', function() {
        posY = $(window).scrollTop();
        $('body').css({
            position: 'fixed',
            top: -1 * posY,
            width: '100%'
        });
        $('.bgOpenedMenu').addClass('active');
    });

    $(document).on('click', '#menuClose', function() {
        $('body').attr('style', '');
        $('html, body').prop({
            scrollTop: posY
        });
        $('.bgOpenedMenu').removeClass('active');
    });

    return false;
});

$('.modalBtn a').on('click', function() {
    $('.bgOpenedMenu').removeClass('active');
    return false;
});

